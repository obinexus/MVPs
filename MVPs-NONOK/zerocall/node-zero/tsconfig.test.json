{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "target": "ES2021",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
      "types": ["node", "jest"]
    },
    "include": [
      "src/**/*",
      "__tests__/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }